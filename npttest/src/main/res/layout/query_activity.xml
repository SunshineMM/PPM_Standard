<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
    <!--顶部信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/query_aty_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_title_back_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="查询"
            android:layout_marginRight="40dp"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="15dp"
        android:background="#ccc">
    </View>
    <LinearLayout
        android:id="@+id/query_aty_changnei"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_chaxun"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="在场车辆查询"
            android:textSize="16dp"
            android:gravity="center|left"
            android:textColor="@color/fontcolor"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="15dp"
        android:background="#ccc">
    </View>
    <LinearLayout
        android:id="@+id/query_aty_carin"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/admission_record"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="入场记录查询"
            android:textSize="16dp"
            android:gravity="center|left"
            android:textColor="@color/fontcolor"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>

    <LinearLayout
        android:id="@+id/query_aty_carout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/appearance_record" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="出场记录查询"
            android:textSize="16dp"
            android:gravity="center|left"
            android:textColor="@color/fontcolor"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>

    <LinearLayout
        android:id="@+id/query_aty_charge"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/charge_record"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收费记录查询"
            android:textSize="16dp"
            android:gravity="center|left"
            android:textColor="@color/fontcolor"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>

</LinearLayout>