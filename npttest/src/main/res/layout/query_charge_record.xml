<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--顶部信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/query_charge_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_title_back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/enter_the_license_plate_query"
                android:layout_marginRight="40dp"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/enter_the_license_plate_number"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/query_charge_camera"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/ic_open_camera"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>


            <!--输入车牌号-->
            <LinearLayout
                android:id="@+id/query_charge_lin_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/query_charge_inputbox1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:background="@drawable/keyboard_bg_white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox2"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox3"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox4"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox5"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:background="@drawable/keyboard_bg_white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox7"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/query_charge_inputbox8"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            android:background="#ccc">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/is_input_new_energy_license_plate"
                android:textColor="@color/fontcolor"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/query_charge_sbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <!--车辆信息
        主页 android:id="@+id/query_carinfo"
        图片 android:id="@+id/query_carimg"
        车牌号 android:id="@+id/query_carnumber"
        停车场 android:id="@+id/query_parkname"
        入场时间 android:id="@+id/query_carinto_time"
        修改 android:id="@+id/query_update"
        android:id="@+id/query_carout"
        -->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/query_charge_swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/query_charge_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.SwipeRefreshLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <Button
                android:id="@+id/query_charge_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ripple_button_style"
                android:text="@string/inquire_btn"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:background="#F0EFF4"
            android:keyBackground="@android:color/white"
            android:keyTextColor="#5E5E5E"
            android:shadowColor="#ffffff"
            android:keyPreviewLayout="@layout/key_preview_layout"
            android:shadowRadius="0.0"
            android:keyTextSize="18sp"
            android:labelTextSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>